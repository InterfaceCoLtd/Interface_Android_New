<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_234"
    android:scrollbarThumbHorizontal="@android:drawable/button_onoff_indicator_off"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalCenter4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_sejong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="195dp"
        android:text="세종대학교 중앙동아리"
        android:textColor="#EFEDFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_pw"
        app:layout_constraintStart_toStartOf="@+id/tv_interface" />

    <TextView
        android:id="@+id/tv_interface"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="164dp"
        android:text="인터페이스"
        android:textColor="#657EFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_pw"
        app:layout_constraintEnd_toEndOf="@+id/et_pw" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="112dp"
        android:text="이메일"
        android:textColor="#657EFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_pw"
        app:layout_constraintEnd_toEndOf="@+id/et_pw" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="이메일"
        android:inputType="text"
        android:paddingStart="16dp"
        android:scrollbarDefaultDelayBeforeFade="400"
        android:scrollbarFadeDuration="250"
        android:scrollbarSize="4dp"
        android:singleLine="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_pw"
        app:layout_constraintEnd_toEndOf="@+id/et_pw" />

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="8dp"
        android:text="비밀번호"
        android:textColor="#657EFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_pw"
        app:layout_constraintEnd_toEndOf="@+id/et_pw" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalCenter4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalCenter4"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_light_big"
        android:insetLeft="105dp"
        android:insetTop="2dp"
        android:insetRight="105dp"
        android:insetBottom="2dp"
        android:text="로그인"
        android:textColor="#EFEDFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:text="혹시 이번 신입부원 이신가요?"
        android:textColor="#EFEDFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalCenter4"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalCenter4"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

    <TextView
        android:id="@+id/tv_alert"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

    <TextView
        android:id="@+id/bt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="회원가입 하기"
        android:textColor="#657EFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalCenter4"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalCenter4"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>